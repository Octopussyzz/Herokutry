<h1 class="d-flex justify-content-center mb-5 font-weight-bold">All Gossips written</h1>

<section class="d-flex justify-content-between flex-wrap">
  <% Gossip.all.each do |gossip| %>
				<!-- Card Dark -->
				<div class="card mb-5">

				  <!-- Card image -->
				  <div class="view overlay">
				    <img class="card-img-top" src="https://picsum.photos/300/300?image=<%= gossip.id+666 %>" alt="Card image cap">
				    <a>
				      <div class="mask rgba-white-slight"></div>
				    </a>
				  </div>

				  <!-- Card content -->
				  <div class="card-body elegant-color white-text rounded-bottom">

				    <!-- Social shares button -->
				    <a class="activator waves-effect mr-4"><i class="fas fa-share-alt white-text"></i></a>
				    <!-- Title -->
				    <h4 class="card-title"><%= gossip.user.username %></h4>
				    <hr class="hr-light">
				    <!-- Text -->
				    <p class="card-text white-text mb-4"><%= gossip.title %></p>
				    <!-- Link -->
				    <a class="white-text d-flex justify-content-end"><h5><%= link_to 'Voir plus', gossips_path(gossip.id) %><i class="fas fa-angle-double-right"></i></h5></a>

				  </div>

				</div>
				<!-- Card Dark -->
  <% end %>
</section>

